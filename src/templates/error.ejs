<%- include('layout', { 
  title: title,
  body: `
    <div class="error-page">
      <h1>${title}</h1>
      <p>${message}</p>
      <a href="/" class="button">Return to Home</a>
    </div>

    <style>
      .error-page {
        text-align: center;
        padding: 4rem 2rem;
      }

      .error-page h1 {
        color: #dc3545;
        margin-bottom: 1rem;
      }

      .error-page p {
        color: #6c757d;
        margin-bottom: 2rem;
      }

      .button {
        display: inline-block;
        padding: 0.5rem 1rem;
        background: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.2s;
      }

      .button:hover {
        background: #0056b3;
      }
    </style>
  `
}) %> 