{
  "name": "cogniframe",
  "version": "0.3.2",
  "description": "A server-side web framework optimized for AI-human collaboration with automated CD workflow",
  // Configuration for npm publishing and CD workflow
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cogniframe-migrate": "./dist/core/persistence/migrations/cli.js",
    "create-cogniframe-app": "./dist/core/generator/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "web-framework",
    "server-side",
    "typescript",
    "ai",
    "express",
    "ssr"
  ],
  "author": "Mark Ng",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/markng/cogniframe"
  },
  "bugs": {
    "url": "https://github.com/markng/cogniframe/issues"
  },
  "homepage": "https://github.com/markng/cogniframe#readme",
  "scripts": {
    "build": "tsc",
    "test": "jest --config=package.json --coverage --coverageReporters='text-summary'",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "migrate": "ts-node src/core/persistence/migrations/cli.ts",
    "migrate:create": "npm run migrate create",
    "migrate:up": "npm run migrate up",
    "migrate:down": "npm run migrate down",
    "migrate:status": "npm run migrate status",
    "create-app": "ts-node src/core/generator/cli.ts"
  },
  "dependencies": {
    "@types/pg": "^8.11.11",
    "@types/sqlite3": "^3.1.11",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "pg": "^8.13.3",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/csurf": "^1.11.5",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "jsdom": "^26.0.0",
    "node-gyp": "^11.1.0",
    "sqlite3": "^5.1.7",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0"
  },
  "overrides": {
    "sqlite3": {
      "node-gyp": "^11.1.0"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
